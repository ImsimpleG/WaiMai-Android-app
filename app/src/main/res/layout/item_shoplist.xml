<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    android:id="@+id/rl_food_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.example.imsimplegary.waimaiapp.View.RoundImageView
            android:id="@+id/shop_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/kfc"/>

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="肯德基宅急送"
            android:textStyle="normal"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/shop_pic"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            />
        <TextView
            android:id="@+id/shop_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="月售45"
            android:textStyle="normal"
            android:layout_toRightOf="@+id/shop_pic"
            android:layout_marginTop="36dp"
            android:paddingLeft="10dp"
            />
        <TextView
            android:id="@+id/shop_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="起送 ￥20"
            android:textStyle="normal"
            android:layout_toRightOf="@+id/shop_pic"
            android:layout_marginTop="58dp"
            android:paddingLeft="10dp"
            />
        <TextView
            android:id="@+id/shop_shippingFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="配送费 ￥9"
            android:textStyle="normal"
            android:layout_toRightOf="@+id/shop_pic"
            android:layout_marginTop="58dp"
            android:layout_marginLeft="75dp"
            />
        <TextView
            android:id="@+id/shop_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="配送约32分钟"
            android:textStyle="normal"
            android:layout_marginTop="36dp"
            app:layout_marginLeftPercent="67%"
            />
        <TextView
            android:id="@+id/shop_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="3.3km"
            android:textStyle="normal"
            android:layout_marginTop="36dp"
            app:layout_marginLeftPercent="90%"
            />

    <View
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f1f1f1"
        />

</android.support.percent.PercentRelativeLayout>