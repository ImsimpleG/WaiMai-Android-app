<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/yellow"/>
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@color/yellow"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/nav_icon_white_return"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单详情"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/bill_infor_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:layout_below="@id/rl"
                android:layout_margin="14dp"
                android:text="商品信息"
                android:textStyle="bold"
                android:textSize="16sp"
                />
            <android.support.percent.PercentRelativeLayout
                android:id="@+id/bill_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_below="@id/bill_infor_title"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/bill_DTname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="肯德基宅慢送"
                    android:textSize="14sp"
                    />
                <View
                    android:layout_below="@+id/bill_DTname"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/bill_DTname"
                    android:id="@+id/bill_dt_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"/>


                <View
                    android:layout_below="@+id/bill_dt_rl"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed"/>

                <TextView
                    android:id="@+id/bill_shippingFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送费"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_marginTop="25dp"
                    android:layout_below="@id/bill_dt_rl"
                    />
                <TextView
                    android:id="@+id/bill_dt_shippingFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥173"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_alignTop="@id/bill_shippingFee"
                    android:layout_alignParentRight="true"
                    />
                <View
                    android:layout_below="@+id/bill_shippingFee"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ededed"/>
                <TextView
                    android:id="@+id/bill_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠规则"
                    android:textColor="#666"
                    android:textSize="12sp"
                    android:layout_marginTop="25dp"
                    android:layout_below="@id/bill_shippingFee"
                    />
                <TextView
                    android:id="@+id/bill_dt_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥173"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:gravity="right"
                    android:layout_alignTop="@id/bill_rule"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小计"
                    android:textColor="#333"
                    android:layout_toLeftOf="@+id/bill_dt_sum"
                    android:layout_alignBottom="@id/bill_dt_sum"
                    />
                <View
                    android:layout_below="@+id/bill_dt_sum"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"
                    android:layout_marginBottom="10dp"
                    />
            </android.support.percent.PercentRelativeLayout>

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_below="@id/bill_list"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/tv_infor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:text="配送信息"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_infor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期望时间"
                    />
                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/tv_infor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="顾客姓名"
                    />
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_below="@+id/tv_infor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="顾客电话"
                    />
                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_below="@+id/tv_infor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="顾客地址"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_infor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即配送"
                    />
                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_infor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蔡"
                    />
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_infor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17329505452"
                    />
                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_infor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="东软小镇22栋104"
                    />

            </android.support.percent.PercentRelativeLayout>
            <android.support.percent.PercentRelativeLayout
                android:id="@+id/bill_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_below="@id/user_info"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/tv_billinfor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:text="订单信息"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_billinfor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单备注"
                    />
                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_below="@+id/tv_billinfor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号"
                    />
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_below="@+id/tv_billinfor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下单时间"
                    />
                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_below="@+id/tv_billinfor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_billinfor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无"
                    />
                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_billinfor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="201901011253487445452"
                    />
                <TextView
                    android:id="@+id/bill_time"
                    android:layout_marginTop="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_billinfor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-01-01 00:00"
                    />
                <TextView
                    android:layout_marginTop="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_billinfor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线支付"
                    android:layout_marginBottom="15dp"
                    />

            </android.support.percent.PercentRelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
