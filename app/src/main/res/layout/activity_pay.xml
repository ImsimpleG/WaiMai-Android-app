<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/yellow"/>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/yellow"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:src="@drawable/nav_icon_white_return"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在线支付"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">
        <TextView
            android:id="@+id/tv_pay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:text="剩余支付时间14:58"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/tv_pay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="￥119"
            android:textColor="#333"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_pay_name"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:text="肯德基宅慢送"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_below="@id/ll">
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/be_wechat"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_wechat"
                android:layout_marginTop="3dp"
                android:text="微信支付"
                />
            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/be_qq"
                android:layout_below="@id/iv_wechat"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_toRightOf="@id/iv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_wechat"
                android:layout_marginTop="18dp"
                android:text="QQ钱包"
                />
            <ImageView
                android:id="@+id/iv_zfb"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@drawable/be_zhi"
                android:layout_below="@id/iv_qq"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_toRightOf="@id/iv_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_qq"
                android:layout_marginTop="18dp"
                android:text="支付宝支付"
                />
        </RelativeLayout>
        <RadioGroup

            android:layout_width="0dp"
            android:layout_marginTop="18dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <RadioButton
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:checked="false"
                android:button="@drawable/radio_btn_style"/>
            <RadioButton
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_btn_style"
                android:checked="false"
                android:layout_marginTop="18dp"/>
            <RadioButton
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_btn_style"
                android:checked="false"
                android:layout_marginTop="18dp"/>

        </RadioGroup>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/finish_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellow"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_paySumPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="确认支付￥119"
            android:textSize="16sp"
            android:textColor="#333"
            android:textStyle="bold"
            />


    </RelativeLayout>
</RelativeLayout>
