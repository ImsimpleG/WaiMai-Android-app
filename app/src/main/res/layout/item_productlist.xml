<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.imsimplegary.waimaiapp.View.RoundImageView
        android:id="@+id/iv_product_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/mcd_food1"/>

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="肯德基宅急送"
        android:textStyle="normal"
        android:textColor="#424242"
        android:layout_toRightOf="@+id/iv_product_pic"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_product_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:lines="1"
        android:text="xxxxxxxxxxxxxxxxxxxxxxx"
        android:layout_toRightOf="@+id/iv_product_pic"
        android:layout_marginTop="40dp"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_product_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="月售45"
        android:layout_toRightOf="@+id/iv_product_pic"
        android:layout_marginTop="62dp"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_product_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="赞 0"
        android:textStyle="normal"
        android:layout_toRightOf="@+id/tv_product_sale"
        android:layout_marginTop="62dp"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="￥89"
        android:textColor="#ff0000"
        android:textStyle="normal"
        android:layout_toRightOf="@+id/iv_product_pic"
        android:layout_marginTop="85dp"
        android:paddingLeft="4dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/tv_product_price"
        android:layout_marginLeft="90dp"
        >
        <ImageView
            android:id="@+id/iv_delProduct"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="2"
            android:src="@drawable/be_del"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tv_orderNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="1dp"
            android:text="1"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/iv_addProduct"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="2"
            android:src="@drawable/be_add"/>
    </LinearLayout>
</RelativeLayout>