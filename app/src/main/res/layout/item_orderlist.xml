<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/order_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="肯德基宅急送"
        android:textStyle="normal"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="待接单"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />
    <View
        android:id="@+id/order_xian"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#e7e7e7"
        android:layout_marginTop="10dp"
        android:layout_below="@id/order_shop_name"/>
    <com.example.imsimplegary.waimaiapp.View.RoundImageView
        android:layout_below="@+id/order_xian"
        android:id="@+id/order_shop_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/kfc"/>
    <TextView
        android:layout_below="@+id/order_xian"
        android:id="@+id/order_sum_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="￥119"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:layout_toRightOf="@+id/order_shop_pic"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_below="@id/order_xian"
        android:id="@+id/order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="2019-01-01 19:00"
        android:textStyle="normal"
        android:layout_toRightOf="@+id/order_shop_pic"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        />
    <View
        android:id="@+id/order_xian1"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#e7e7e7"
        android:layout_marginTop="10dp"
        android:layout_below="@id/order_shop_pic"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/order_xian1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_btn"
        android:text="再来一单"
        android:textColor="@color/yellow"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>